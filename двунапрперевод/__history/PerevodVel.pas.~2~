unit PerevodVel;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Menus;

type
  TFMain = class(TForm)
    BClose: TButton;
    EVel1: TEdit;
    EVel2: TEdit;
    BChange: TButton;
    Label1: TLabel;
    Label2: TLabel;
    procedure BCloseClick(Sender: TObject);
    procedure EVel1Enter(Sender: TObject);
    procedure EVel2Enter(Sender: TObject);
    procedure BChangeClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FMain: TFMain;

implementation

{$R *.dfm}


procedure TFMain.BCloseClick(Sender: TObject);
begin
  close;
end;

procedure TFMain.EVel1Enter(Sender: TObject);
begin
  Evel2.Clear;
end;

procedure TFMain.EVel2Enter(Sender: TObject);
begin
  Evel1.Clear;
end;

procedure TFMain.BChangeClick(Sender: TObject);
var
  e1,e2: real;
begin
  try
    e1:=StrToFloat(EVel1.Text);
  except
    ShowMessage('Недопустимая строка');
  end;
  try
    e2:=StrToFloat(EVel2.Text);
  except
    ShowMessage('Недопустимая строка');
   exit
 end;

  if (e1>=0) then begin
    e2:= e1*100000;
    EVel2.Text:=FloatToStr(e2);
  end

  else begin
    ShowMessage('Значение должно быть положительным');
    EVel2.Clear;
  end;

    if (e2>=0) then begin
    e1:= e2/100000;
    EVel1.Text:=FloatToStr(e1);
  end

  else begin
    ShowMessage('Значение должно быть положительным');
    EVel1.Clear;
  end;

end;
end.

